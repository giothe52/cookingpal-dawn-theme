<div class="section-cooking-pal-features">
	<h2>{{ section.settings.section-title }}</h2>
	<div class="tab">
		<button class="tablinks" onclick="openCat(event, 'Cat1')">{{ section.settings.category-1 }}</button>
		<button class="tablinks" onclick="openCat(event, 'Cat2')">{{ section.settings.category-2 }}</button>
		<button class="tablinks" onclick="openCat(event, 'Cat3')">{{ section.settings.category-3 }}</button>
	</div>

	<!-- Tab content -->
	{%- for block in section.blocks -%}
		{%- case block.type -%}
			{%- when 'Category1' -%} 
				<div id="Cat1" class="tabcontent" style="display:grid">
					{% for i in (1..6) %}
						{% assign block_type_text = 'text' | append: i %}
						{% assign feature_text = block.settings[block_type_text] %}

						{% assign block_type_title = 'title' | append: i %}
						{% assign feature_title = block.settings[block_type_title] %}

						{% assign block_type_image = 'image' | append: i %}
						{% assign feature_image = block.settings[block_type_image] %}

						<div class="feature-card">
							{% if feature_image %}
								{{ feature_image | image_url: height: 250 | image_tag }}
							{% endif %}
							<h3>{{ feature_title }}</h3>
							<p>{{ feature_text }}</p>
						</div>
					{% endfor %}
				</div>
			{%- when 'Category2' -%}
				<div id="Cat2" class="tabcontent"> 
					{% for i in (1..6) %}
						{% assign block_type_text = 'text' | append: i %}
						{% assign feature_text = block.settings[block_type_text] %}

						{% assign block_type_title = 'title' | append: i %}
						{% assign feature_title = block.settings[block_type_title] %}

						{% assign block_type_image = 'image' | append: i %}
