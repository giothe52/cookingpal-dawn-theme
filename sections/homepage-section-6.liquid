{% stylesheet %}
.section-cooking-pal-features {
	padding: 87px 50px 95px;
	margin: auto;
}
.section-cooking-pal-features h2 {
	font-weight: 700;
	font-size: 2.8125em;
	color: #304A36;
	text-align: center;
}
.tab {
	overflow: hidden;
	display: grid;
	grid-template-columns: 1fr 1fr 1fr;
	gap: 25px;
}
.tab button {
	color: #B4B4B4;
	font-size: 1.5em;
	font-weight: 700;
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
	position: relative;
}
.tab button::after {
	content: '';
	display: block;
	width: 100%;
	height: 5px;
	border-radius: 100px;
	background: #B4B4B4;
	position: absolute;
	bottom: 0;
	left: 0;
}
.tab button:hover,
.tab button.active {
	color: #304A36;
}
.tab button:hover::after,
.tab button.active::after {
	border-bottom: 5px solid #57C88C;
}
.tabcontent {
  display: none;
  padding: 6px 12px;
  border-top: none;
	grid-template-columns: repeat(6,minmax(0,1fr));
}
.tabcontent .feature-card {
	display: grid;
	place-items: center;
}
.tabcontent .feature-card img {
	width: 100%;
	height: auto;
	max-width: 200px;
}
.tabcontent .feature-card h3 {
	color: #304A36;
	font-weight: 700;
	margin-bottom: 0;
}
.tabcontent .feature-card p {
	text-align: center;
}

@media screen and (max-width: 820px) {
	.tab {
		grid-template-columns: 1;
	}
	.tabcontent {
		grid-template-columns: repeat(2,minmax(0,1fr));
		gap: 30px;
	}
}
{% endstylesheet %}

