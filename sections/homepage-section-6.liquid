						<div class="feature-card">
							{% if feature_image %}
								{{ feature_image | image_url: height: 250 | image_tag }}
							{% endif %}
							<h3>{{ feature_title }}</h3>
							<p>{{ feature_text }}</p>
						</div>
					{% endfor %}
				</div>
			{%- when 'Category3' -%}
				<div id="Cat3" class="tabcontent">
					{% for i in (1..6) %}
						{% assign block_type_text = 'text' | append: i %}
						{% assign feature_text = block.settings[block_type_text] %}

						{% assign block_type_title = 'title' | append: i %}
						{% assign feature_title = block.settings[block_type_title] %}

						{% assign block_type_image = 'image' | append: i %}
						{% assign feature_image = block.settings[block_type_image] %}

						<div class="feature-card">
							{% if feature_image %}
								{{ feature_image | image_url: height: 250 | image_tag }}
							{% endif %}
							<h3>{{ feature_title }}</h3>
							<p>{{ feature_text }}</p>
