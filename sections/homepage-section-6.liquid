{% stylesheet %}
.section-cooking-pal-features {
	padding: 87px 50px 95px;
	margin: auto;
}
.section-cooking-pal-features h2 {
	font-weight: 700;
	font-size: 2.8125em;
	color: #304A36;
	text-align: center;
}
.tab {
	overflow: hidden;
	display: grid;
	grid-template-columns: 1fr 1fr 1fr;
	gap: 25px;
}
.tab button {
	color: #B4B4B4;
	font-size: 30px;
	font-weight: 700;
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
	position: relative;
}
.tab button::after {
	content: '';
	display: block;
	width: 100%;
	height: 5px;
	border-radius: 100px;
	background: #B4B4B4;
	position: absolute;
	bottom: 0;
	left: 0;
	transition: all ease-in .3s;
}
.tab button:hover,
.tab button.active {
	color: #304A36;
}
.tab button:hover::after,
.tab button.active::after {
	border-bottom: 5px solid #57C88C;
	width: 100%;
}
.tabcontent { 
  display: none;
  padding: 6px 12px;
  border-top: none; 
	grid-template-columns: repeat(6,minmax(0,1fr));
	margin-top: 30px;
}
.tabcontent .feature-card {
	display: grid;
	place-items: center;
}
.tabcontent .feature-card img,
.tabcontent .feature-card video {
	width: 100%;
	height: auto;
	max-width: 250px;
}
.tabcontent .feature-card h3 {
	color: #304A36;
	font-weight: 700;
	margin-bottom: 0;
	text-align: center;
	margin-top: 40px;
}
.tabcontent .feature-card p {
	text-align: center;
}
.cooking-pal-features-mobile {
	display: none;
}
button.features-accordion {
	color: #304A36;
	font-size: 1.5em;
	font-weight: 700;
	width: 100%;
	background: none;
	border: none;
	outline: none;
	position: relative;
	padding-bottom: 10px;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
}
button.features-accordion::after {
	content: '';
	display: block;
	width: 100%;
	height: 5px;
	border-radius: 100px;
	background: #304A36;
	position: absolute;
	bottom: 0;
	left: 0;
}
button.features-accordion span {
	float: right;
}
button.features-accordion span svg {
	width: 20px;
	transition: transform ease-in .1s;
}
button.features-accordion.active span svg {
	transform: rotate(180deg);
}
.features-panel {
  padding: 0 18px;
  background-color: white;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
}
@media screen and (max-width: 820px) {
	.section-cooking-pal-features {
		padding: 87px 30px 95px;
	}
	.cooking-pal-features-desktop {
		display: none;
	}
	.cooking-pal-features-mobile {
		display: block;
	}
	.section-cooking-pal-features h2 {
		font-size: 1.5em;
	}
	.tab {
		grid-template-columns: 1fr;
	}
	.tabcontent {
		grid-template-columns: repeat(2,minmax(0,1fr));
		gap: 30px;
	}
	.cooking-pal-features-mobile video.feature-vid {
		max-width: 135px;
	}
	.cooking-pal-features-mobile h3 {
		margin: 0;
		text-align: center;
	}
	.features-panel .features-wrapper {
		display: grid;
    grid-template-columns: 1fr 1fr;
    place-items: center;
	}
}
@media screen and (max-width: 414px) {
	.cooking-pal-features-mobile .features-panel {
		margin-top: 28px;
	}
	.cooking-pal-features-mobile video.feature-vid {
		max-width: 166px;
	}
}
{% endstylesheet %}

{% javascript %}
	var acc = document.getElementsByClassName("features-accordion");
	var i;

	for (i = 0; i < acc.length; i++) {
		acc[i].addEventListener("click", function() {
			this.classList.toggle("active");
			var panel = this.nextElementSibling;
			if (panel.style.maxHeight) {
				panel.style.maxHeight = null;
			} else {
				panel.style.maxHeight = panel.scrollHeight + "px";
			}
		});
	}

	// Listening to the video element
	var clip = document.getElementsByClassName("feature-vid");
	var v;

	for (v = 0; v < clip.length; v++) {
		clip[v].addEventListener("mouseover", function (e) {
			this.play();
		});
		clip[v].addEventListener("mouseout", function (e) {
			this.pause();
		});
	}
{% endjavascript %}